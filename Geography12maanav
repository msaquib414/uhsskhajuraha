        const quizContainer = document.getElementById('quiz');
        const resultContainer = document.getElementById('result');
        const submitBtn = document.getElementById('submitBtn');
        const nameInput = document.getElementById('studentName');
        const timerDisplay = document.getElementById('timer');

        let currentQuestion = 0;
        let score = 0;
        let timeLeft = 25 * 60; // 25 minutes in seconds
        let timerInterval;
        let submitted = false;

        function startTimer() {
            timerInterval = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerDisplay.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    submitQuiz();
                }
                timeLeft--;
            }, 1000);
        }

        function displayQuestions() {
            questions.forEach((questionData, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.classList.add('question');
                questionDiv.innerHTML = `<p>${questionData.question}</p>`;
                const optionsDiv = document.createElement('div');
                optionsDiv.classList.add('options');
                questionData.options.forEach((option, optionIndex) => {
                    const optionLetter = String.fromCharCode(97 + optionIndex); // a, b, c, d
                    optionsDiv.innerHTML += `
                        <label>
                            <input type="radio" name="question${index}" value="${optionLetter}">
                            (${optionLetter}) ${option}
                        </label>
                    `;
                });
                questionDiv.appendChild(optionsDiv);
                quizContainer.appendChild(questionDiv);
            });
            submitBtn.disabled = false;
        }

        function submitQuiz() {
            if (submitted) {
                return;
            }
            submitted = true;
            clearInterval(timerInterval);
            score = 0;
            const userAnswers = {};
            questions.forEach((questionData, index) => {
                const selectedOption = document.querySelector(`input[name="question${index}"]:checked`);
                if (selectedOption) {
                    userAnswers[index] = selectedOption.value;
                    if (selectedOption.value === questionData.correctAnswer) {
                        score++;
                    }
                    // Display correct answer
                    const correctAnswerElement = document.createElement('p');
                    correctAnswerElement.classList.add('correct-answer');
                    const correctAnswerLetter = questionData.correctAnswer;
                    const correctAnswerText = questionData.options[correctAnswerLetter.charCodeAt(0) - 97];
                    correctAnswerElement.textContent = `सही उत्तर: (${correctAnswerLetter}) ${correctAnswerText}`;
                    document.querySelectorAll('.question')[index].appendChild(correctAnswerElement);
                } else {
                    // Display correct answer even if not answered
                    const correctAnswerElement = document.createElement('p');
                    correctAnswerElement.classList.add('correct-answer');
                    const correctAnswerLetter = questionData.correctAnswer;
                    const correctAnswerText = questionData.options[correctAnswerLetter.charCodeAt(0) - 97];
                    correctAnswerElement.textContent = `सही उत्तर: (${correctAnswerLetter}) ${correctAnswerText}`;
                    document.querySelectorAll('.question')[index].appendChild(correctAnswerElement);
                }
                // Disable all radio buttons for this question
                const radioButtons = document.querySelectorAll(`input[name="question${index}"]`);
                radioButtons.forEach(radio => {
                    radio.disabled = true;
                });
            });

            resultContainer.textContent = `आपका स्कोर: ${score} / ${questions.length}`;
            submitBtn.disabled = true;

            const studentName = nameInput.value.trim();
            if (studentName) {
                saveAndDownloadResults(studentName, score);
            } else {
                alert("कृपया अपना नाम दर्ज करें।");
            }
        }

        function saveAndDownloadResults(name, score) {
            const csvData = `नाम,स्कोर\n${name},${score}\n`;
            const filename = 'result.csv';
            const blob = new Blob([csvData], { type: 'text/csv;charset=utf-8;' });

            if (navigator.msSaveBlob) { // IE 10+
                navigator.msSaveBlob(blob, filename);
            } else {
                const link = document.createElement("a");
                if (link.download !== undefined) { // Browsers that support HTML5 download attribute
                    const url = URL.createObjectURL(blob);
                    link.setAttribute("href", url);
                    link.setAttribute("download", filename);
                    link.style.visibility = 'hidden';
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                }
            }
        }

        // Wait for name input before displaying questions and starting timer
        nameInput.addEventListener('change', function() {
            if (nameInput.value.trim() !== "") {
                displayQuestions();
                startTimer();
                nameInput.disabled = true; // Disable name input after entering
            }
        });

        // Initial timer display
        const initialMinutes = Math.floor(timeLeft / 60);
        const initialSeconds = timeLeft % 60;
        timerDisplay.textContent = `${String(initialMinutes).padStart(2, '0')}:${String(initialSeconds).padStart(2, '0')}`;

    </script>
</body>
</html>
